<p id="notice"></p>

<p>
<div class="title">
	<strong>Title:</strong>
</div>
  <%= @post.title %>
  <div class="palindrome" >
    <%= @post.palindrome %>
  </div>
  <div class="detect_palindrome" >
    <%#= @post.is_palindrome %>
  </div>
  <div class="detect_smallest_palindrome">
    <%#= @post.smallest_palindrome %>
  </div>

</p>

<p>
  <strong>Photo:</strong>
  <div class="image">
    <% if @post.photo.attached? %>
      <%= image_tag(url_for @post.photo) %>
    <% end %>
  </div>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
